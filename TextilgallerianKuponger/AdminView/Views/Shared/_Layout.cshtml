@using System.Collections.Concurrent
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/semantic")
    <script src="https://code.jquery.com/jquery-2.1.3.js"></script>
</head>
<body>
    <div class="ui secondary pointing page grid menu">

        @*<i class='tags icon'></i>*@ @Html.ActionLink("Rabatter", "Index", "Coupon", null, new { @class = "item coupons" })

        @*<i class="tag icon"></i>*@ @Html.ActionLink("Skapa Rabatt", "Create", "Coupon", null, new { @class = "item create-coupon" })

        @*<i class="user icon"></i> Users*@ @Html.ActionLink("Användare", "Users", "User", null, new { @class = "item users" })

        @Html.ActionLink("Skapa Användare", "Create", "User", null, new { @class = "item create-user" })


        <div class="right menu">
            <div class="item">
                <div class="ui icon input">
                    <input type="text" placeholder="Search...">
                    <i class="search link icon"></i>
                </div>
            </div>
            <a class="ui item">
                Logout
            </a>
        </div>
    </div>

    <div class="ui page grid">
        @RenderBody()
    </div>
    
    @RenderSection("scripts", required: false)
   
<script>
    $(".ui.secondary.pointing.page.grid.menu")
        .on("click", ".item", function () {
            $(this)
                .addClass("active")
                .siblings(".item")
                .removeClass("active");
        });
</script>
</body>
</html>

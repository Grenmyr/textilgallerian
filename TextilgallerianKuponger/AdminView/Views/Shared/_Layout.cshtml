@using System.Collections.Concurrent
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/semantic")
    <script src="//code.jquery.com/jquery-2.1.3.js"></script>
    @Scripts.Render("~/bundles/semantic")
</head>
<body>
    <div class="ui secondary pointing menu">

        @*<i class='tags icon'></i>*@ @Html.ActionLink("Rabatter", "Index", "Coupon", null, new { @class = "active item" })

        @*<i class="tag icon"></i>*@ @Html.ActionLink("Skapa Rabatt", "Create", "Coupon", null, new { @class = "item" })

        @*<i class="user icon"></i> Users*@ @Html.ActionLink("Användare", "Users", "User", null, new { @class = "item" })

        <div class="right menu">
            <div class="item">
                <div class="ui icon input">
                    <input type="text" placeholder="Search...">
                    <i class="search link icon"></i>
                </div>
            </div>
            <a class="ui item">
                Logout
            </a>
        </div>
    </div>

    <div class="ui page grid">
        @RenderBody()
    </div>
    
    @RenderSection("scripts", required: false)
</body>
</html>

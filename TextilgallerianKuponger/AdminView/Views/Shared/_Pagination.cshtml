@if (Model.TotalPages > 1)
{
    <div class="sixteen wide centered column">
        <div class="ui pagination menu">
            @if (Model.CurrentPage > 1)
            {
                <a class="item" href="/@ViewData["controller"].ToString()?page=@(Model.CurrentPage - 1)"><i class="icon arrow left"></i></a>
            }
            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                var htmlClass = i == Model.CurrentPage ? new { @class = "active item" } : new { @class = "item" };

                @Html.ActionLink(i.ToString(), "Index", ViewData["controller"].ToString(), new { page = i }, htmlClass)
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <a class="item" href="/@ViewData["controller"].ToString()?page=@(Model.CurrentPage + 1)"><i class="icon arrow right"></i></a>
            }
        </div>
    </div>
}

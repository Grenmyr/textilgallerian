        <div class="ui table">
            <div>
                <div>
                    <div>E-Post</div>
                    <div>Admin?</div>
                </div>
            </div>
            <div>
                <div>
                    <div colspan="3">
                        <div class="ui primary button" id="form_button">
                            Lägg till användare
                        </div>
                    </div>
                </div>
            </div>
            <div>
                @foreach (var user in Model.Users1)
                {
                    <div>
                        <div>
                            @user.Email
                        </div>
                        <div>
                            Yes
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="ui hidden divider"></div>
        <div class="field">
        </div>
    </div>

    
        <div class="eight wide column">
            <div id="uform" class="hidden">
                <form class="ui form">

                    <div class="two fields">
                        <div class="field">
                            <label>Behörighet</label>
                            <select class="ui search dropdown">
                                <option value="">Behörighet</option>
                                <option value="AL">Admin</option>
                                <option value="AL">Läsa</option>
                                <option value="AK">Editera</option>
                                <option value="AZ">Skriva</option>
                            </select>
                        </div>
                    </div>
                    <div class="field">
                        <div class="required field">
                            <label>Email</label>
                            <div class="ui icon input">
                                <input type="text" name="email" placeholder="Email">
                            </div>
                        </div>

                        <div class="required field">
                            <label>Password</label>
                            <div class="ui icon input">
                                <input type="password">
                            </div>
                        </div>
                    </div>

                    <div class="ui error message">
                        <div class="header">Något gick fel</div>
                    </div>
                    <div class="ui primary button">
                        Save
                    </div>
                    
                </form>
            </div>
    </div>


<script type="text/javascript">
    $("#form_button").click(function () {
        if ($("#uform").attr("class") == "hidden") {
            $("#uform").attr("class", "");

        }
        else {
            $("#uform").attr("class", "hidden");
        }
        
    });

</script>
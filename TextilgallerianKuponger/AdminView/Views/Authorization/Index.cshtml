@model AdminView.ViewModel.AuthorizationViewModel

@{
    ViewBag.Title = "Logga in";
}

<div class="four column">
    <form class="ui form" method="post">
        @Html.AntiForgeryToken()

        <h3>Logga in</h3>


        <div class="field">
            @Html.LabelFor(m => m.Email, new { @class = "" })
            @Html.TextBoxFor(m => m.Email, new { required = "" })
        </div>

        <div class="field">
            @Html.LabelFor(m => m.Password, new { @class = "" })
            @Html.PasswordFor(m => m.Password, new { required = "" })
        </div>

        <input type="submit" class="ui button green" value="Logga in" />
    </form>
</div>